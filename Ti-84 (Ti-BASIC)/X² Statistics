Output(1,1,"Chi-Square: ")
Output(1,13,Z)
Output(2,1,"Degrees of Freedom: ")
Output(2,21,D)
Output(3,1,"Alpha (α): ")
Output(3,12,A)
Output(4,1,"P-Value: ")
Output(4,10,P)
If P≤A
Then
Output(6,1,"REJECT H₀")
Else
Output(6,1,"Fail To Reject H₀")
End
Disp "
Disp "
Disp "
Disp "
Disp "
Disp "
Disp "
